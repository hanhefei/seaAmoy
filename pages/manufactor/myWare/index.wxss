.publishNewWare {
    position: fixed;
    bottom: 0;
    display: block;
    width: 690rpx;
    height: 80rpx;
    padding: 40rpx 30rpx;
    background: #ffffff;
}
.publishNewWare text {
    display: block;
    width: 690rpx;
    height: 80rpx;
    background: #EA2243;
    border-radius: 12rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center;
}

.noMore {
    display: flex;
    width: 100%;
    height: 80rpx;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
}