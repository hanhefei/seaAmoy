/**pages/sellerBasic/orderManage/sendGood**/
.expressCode {
    width: 690rpx;
    margin-bottom: 16rpx;
    padding: 0 30rpx;
    background: #ffffff;
}
.expressCode text {
    display: block;
    margin-top: 30rpx;
    font-size: 32rpx;
    color: #333333;
}
.expressCode input {
    display: block;
    width: 646rpx;
    height: 96rpx;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    padding: 0 20rpx;
    border: 2rpx solid #333333;
    line-height: 96rpx;
    font-size: 28rpx;
}

.expressName {
    width: 690rpx;
    padding: 0 30rpx;
    background: #ffffff;
}
.expressName > text {
    display: block;
    margin-top: 30rpx;
    font-size: 32rpx;
    color: #333333;
}
.expressName view {
    position: relative;
    display: flex;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
    justify-content: space-between;
    align-items: center;
}
.expressName view picker {
    display: block;
    width: 100%;
}
.expressName view text {
    display: block;
    font-size: 32rpx;
    color: #333333;
}
.expressName view image {
    position: absolute;
    top: 50%;
    right: 0;
    display: block;
    width: 12rpx;
    height: 22rpx;
    transform: translateY(-50%);
}

.confirm {
    display: block;
    width: 690rpx;
    height: 80rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    background: #EA2243;
    border-radius: 12rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center;
}