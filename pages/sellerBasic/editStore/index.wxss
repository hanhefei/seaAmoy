.storeWareTypeCountry {
    display: flex;
    width: 690rpx;
    height: 100rpx;
    padding: 0 30rpx;
    background: #F2F2F2;
    justify-content: space-between;
    align-items: center;
}
.storeWareTypeCountry text {
    display: block;
    font-size: 28rpx;
    color: #999999;
}
.storePhone {
