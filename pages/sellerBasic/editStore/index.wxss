    align-items: center;
}
.storeClassifyInfo text {
    display: block;
    margin-right: 30rpx;
    font-size: 32rpx;
    color: #333333;
}
.storeClassifyInfo input {
    display: block;
    width: 380rpx;
    margin-right: 30rpx;
    font-size: 32rpx;
    color: #333333;
    text-align: right;
}
.storeClassifyInfo image {
    display: block;
    width: 12rpx;
    height: 22rpx;
}
.storeCountry {
    height: 104rpx;
    margin-bottom: 16rpx;
}
