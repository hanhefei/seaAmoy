/**pages/sellerBasic/editStore/index**/
page {
    background: #F2F2F2;
}
.storeElement {
    display: flex;
    width: 690rpx;
    padding: 0 30rpx;
    background: #ffffff;
    justify-content: space-between;
    align-items: center;
}
.storeLogo {
    height: 154rpx;
    border-bottom: 2rpx solid #F2F2F2;
}
.storeLogo > text {
    display: block;
    font-size: 32rpx;
    color: #333333;
}
.storeLogoInfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.storeLogoInfo image:first-child {
    display: block;
    width: 96rpx;
    height: 96rpx;
    margin-right: 30rpx;
    border-radius: 16rpx;
}
.storeLogoInfo image:last-child {
    display: block;
    width: 12rpx;
    height: 22rpx;
}
.storeName {
    height: 100rpx;
    margin-bottom: 16rpx;
}
.storeName > text {
    display: block;
    font-size: 32rpx;
    color: #333333;
}
.storeNameInfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.storeNameInfo input {
    display: block;
    width: 380rpx;
    margin-right: 30rpx;
    font-size: 32rpx;
    color: #333333;
    text-align: right;
}
.storeNameInfo image {
    display: block;
    width: 12rpx;
    height: 22rpx;
}
.storeClassify {
    height: 104rpx;
    border-bottom: 2rpx solid #F2F2F2;
}
