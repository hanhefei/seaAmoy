/**pages/sellerBasic/myWare/index**/
page {
    background: #ffffff;
}

.classify {
    display: flex;
    width: 690rpx;
    height: 104rpx;
    padding: 0 30rpx;
    background: #ffffff;
    border-bottom: 16rpx solid #F2F2F2;
    justify-content: space-between;
    align-items: center;
}
.classify > text {
    display: block;
    font-size: 32rpx;
    color: #333333;
}
.classifyElement {
    display: flex;
    height: 100%;
    justify-content: flex-start;
    align-items: center;
}
.classifyElement text {
    display: block;
    margin-right: 10rpx;
    font-size: 28rpx;
    color: #999999;
}
.classifyElement image {
    display: block;
    width: 12rpx;
    height: 22rpx;
}

.wareElement {
    width: 100%;
    background: #ffffff;
}
.everyWare {
    width: 690rpx;
    padding: 30rpx;
    border-bottom: 4rpx solid #F2F2F2;
}
.everyWareInfo {
    display: flex;
    justify-content: space-between;
}
.everyWareInfo > image {
    display: block;
    width: 168rpx;
    height: 168rpx;
    border-radius: 16rpx;
}
.everyDescribe {
    width: 500rpx;
}
.everyTitle {
    overflow: hidden;
    display: -webkit-box;
    max-height: 88rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333333;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
}
.everyPrice {
    display: flex;
    margin-top: 4rpx;
    justify-content: flex-start;
    align-items: flex-end;
}
.nowPrice {
    display: block;
    margin-right: 20rpx;
    font-size: 32rpx;
    color: #EA2243;
}
.oldPrice {
    display: block;
    margin-bottom: 4rpx;
    font-size: 20rpx;
    color: #C4C4C4;
    text-decoration: line-through;
}
.everyOtherInfo {
    display: flex;
    margin-top: 4rpx;
    justify-content: flex-start;
    align-items: center;
}
.countryInfo {
    display: flex;
    margin-right: 36rpx;
    justify-content: flex-start;
    align-items: center;
}
.countryInfo image {
    display: block;
    width: 46rpx;
    height: 28rpx;
    margin-right: 10rpx;
}
.countryInfo text {
    display: block;
    font-size: 24rpx;
    color: #666666;
}
.otherInfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.otherInfo text {
    display: block;
    font-size: 22rpx;
    color: #999999;
}
.otherInfo text:first-child {
    margin-right: 60rpx;
}

.everyHandle {
    display: flex;
    margin-top: 24rpx;
    justify-content: flex-end;
    align-items: center;
}
.everyHandle text {
    display: block;
    width: 172rpx;
    height: 52rpx;
    background: #EA2243;
    border-radius: 26rpx;
    line-height: 52rpx;
    font-size: 28rpx;
    color: #ffffff;
    text-align: center;
}

.noMore {
    display: flex;
    width: 100%;
    height: 80rpx;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
}