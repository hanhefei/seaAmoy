/**pages/sellerBasic/my/index**/
@import '/template/tabbar/tabbar.wxss';

.storeInfo {
    display: flex;
    margin-bottom: 16rpx;
    padding: 28rpx 30rpx 32rpx 30rpx;
    background: #ffffff;
    justify-content: flex-start;
    align-items: center;
}
.imgInfo {
    display: block;
    width: 96rpx;
    height: 96rpx;
    border-radius: 16rpx;
    margin-right: 20rpx;
}
.storeEdit {
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 28rpx;
    background:rgba(0, 0, 0, .5);
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    color: #ffffff;
    text-align: center;
}
.storeDataInfo {
    display: flex;
    width: 416rpx;
    height: 96rpx;
    justify-content: flex-start;
    align-items: center;
}
.storeDataInfo > view {
    display: flex;
    width: 412rpx;
    height: 100%;
    flex-direction: column;
    justify-content: center;
}
.storeBorder {
    display: flex;
    width: 4rpx;
    height: 60rpx;
    background: #F2F2F2;
}
.storeName {
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #333333;
}
.storeData {
    display: flex;
    margin-top: 16rpx;
    justify-content: flex-start;
    align-items: center;
}
.storeDataBlock {
    display: flex;
    margin-right: 20rpx;
    font-size: 22rpx;
    color: #666666;
    justify-content: flex-start;
    align-items: center;
}
.storeDataBlock image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 6rpx;
}
.storeWareNum {
    display: flex;
    width: 158rpx;
    height: 96rpx;
    font-size: 24rpx;
    color: #666666;
    justify-content: center;
    align-items: center;
}

.myHandleList {
    width: 720rpx;
    padding-left: 30rpx;
    background: #ffffff;
}
.everyHandle {
    display: flex;
    width: 690rpx;
    height: 108rpx;
    padding-right: 30rpx;
    border-bottom: 2rpx solid #F2F2F2;
    justify-content: space-between;
    align-items: center;
}
.handle {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.handle image {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
}
.handle text {
    display: block;
    font-size: 32rpx;
    color: #333333;
}
.everyHandle > image {
    display: block;
    width: 12rpx;
    height: 22rpx;
}